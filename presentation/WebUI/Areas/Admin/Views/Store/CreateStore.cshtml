<script src="~/AdminStatics/assets/js/config.js"></script>

<!-- customizer js -->
<script src="~/AdminStatics/assets/js/customizer.js"></script>

<!-- Plugins js -->
<script src="~/AdminStatics/assets/js/sidebar-menu.js"></script>
<script src="~/AdminStatics/assets/js/notify/bootstrap-notify.min.js"></script>
<script src="~/AdminStatics/assets/js/notify/index.js"></script>

<!-- Data table js -->
<script src="~/AdminStatics/assets/js/jquery.dataTables.js"></script>
<script src="~/AdminStatics/assets/js/custom-data-table.js"></script>

<!-- sidebar effect -->
<script src="~/AdminStatics/assets/js/sidebareffect.js"></script>

<!-- Theme js -->
<script src="~/AdminStatics/assets/js/script.js"></script>