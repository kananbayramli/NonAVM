@model UserLayoutViewModel
<div class="header_right pr-0">
    <ul>
        <li class="ui dropdown">
            <a href="#" class="opts_account" title="Account">
                <img src="~/assets/images/inner-page/user/1.png" alt="">
            </a>
            <div class="menu dropdown_account">
                <div class="channel_my">
                    <div class="profile_link">
                        <img src="~/assets/images/inner-page/user/1.png" alt="">
                        <div class="pd_content">
                            <div class="rhte85">
                                <h6>@Model.UserName</h6>
                                <div class="mef78" title="Verify">
                                    <i class='uil uil-check-circle'></i>
                                </div>
                            </div>
                            <span>@Model.Email</span>
                        </div>
                    </div>
                    <a href="user-dashboard.html" class="dp_link_12">İstifadəçi İdarə Paneli Profili</a>
                </div>
                <a asp-area="Admin" class="item channel_item"><img style="width: 20px; margin-right: 10px;" src="~/assets/svg/fashion/menu_svg/dashboard.svg" class="blur-up lazyload " alt=" ">İdarə Paneli</a>
                <a href="referral_details.html" class="item channel_item"><img style="width: 20px; margin-right: 10px;" src="~/assets/svg/fashion/menu_svg/referral.svg" class="blur-up lazyload " alt=" ">Referral</a>
                <a href="faq.html" class="item channel_item"><img style="width: 20px; margin-right: 10px;" src="~/assets/svg/fashion/menu_svg/help.svg" class="blur-up lazyload " alt=" ">Kömək</a>
                <a href="wishlist.html" class="item channel_item"><img style="width: 20px; margin-right: 10px;" src="~/assets/svg/fashion/menu_svg/heart.svg" class="blur-up lazyload " alt=" ">İstək Siyahısı</a>
                <a href="#" class="item channel_item"><img style="width: 20px; margin-right: 10px;" src="~/assets/svg/fashion/menu_svg/setting.svg" class="blur-up lazyload " alt=" ">Parametr</a>
                <a asp-controller="Auth" asp-action="Logout" asp-route-returnurl="/Home/Index" class="item channel_item"><img style="width: 20px; margin-right: 10px;" src="~/assets/svg/fashion/menu_svg/logout.svg" class="blur-up lazyload " alt=" ">Çıxış</a>
            </div>
        </li>
    </ul>
</div>

<li class="profile-nav onhover-dropdown pe-0 me-0">
    <div class="media profile-media">
        <img class="user-profile rounded-circle" src="@Url.Content("~/photos/")" class="img-fluid" alt="">

        <div class="user-name-hide media-body">
            <span>@User.Identity.Name</span>
            <p class="mb-0 font-roboto">Admin<i class="middle ri-arrow-down-s-line"></i></p>
        </div>
    </div>
    <ul class="profile-dropdown onhover-show-div">
        <li>
            <a href="~/AdminStatics/all-users.html">
                <i data-feather="users"></i>
                <span>İstifadəçilər</span>
            </a>
        </li>
        <li>
            <a href="~/AdminStatics/order-list.html">
                <i data-feather="archive"></i>
                <span>Sifarişlər</span>
            </a>
        </li>
        <li>
            <a href="~/AdminStatics/support-ticket.html">
                <i data-feather="phone"></i>
                <span>Spports Tickets</span>
            </a>
        </li>
        <li>
            <a asp-area="Admin" asp-controller="Home" asp-action="EditProfile">
                <i data-feather="settings"></i>
                <span>Parametrlər</span>
            </a>
        </li>
        <li>
            <a data-bs-toggle="modal" data-bs-target="#staticBackdrop" href="javascript:void(0)">
                <i data-feather="log-out"></i>
                <span>Çıxış</span>
            </a>
        </li>
    </ul>
</li>